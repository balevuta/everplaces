<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkGray"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="8"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="7"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/btn_side_category"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_side_menu_height"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/shape_side_menu_button"
                android:clickable="true"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/item_side_menu_icon"
                    android:layout_height="@dimen/item_side_menu_icon"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_category" />

                <TextView
                    android:id="@+id/txt_side_menu_category"
                    style="@style/StyleTextInSideMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="@string/title_category" />

                <ImageView
                    android:id="@+id/img_arrow_category"
                    android:layout_width="@dimen/item_side_menu_arrow"
                    android:layout_height="@dimen/item_side_menu_arrow"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_arrow_forward" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_side_favorite"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_side_menu_height"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/shape_side_menu_button"
                android:clickable="true"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/item_side_menu_icon"
                    android:layout_height="@dimen/item_side_menu_icon"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_favorite_2" />

                <TextView
                    android:id="@+id/txt_side_menu_favorite"
                    style="@style/StyleTextInSideMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="@string/title_favorite" />

                <ImageView
                    android:id="@+id/img_arrow_favorite"
                    android:layout_width="@dimen/item_side_menu_arrow"
                    android:layout_height="@dimen/item_side_menu_arrow"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_arrow_forward" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_side_history"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_side_menu_height"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/shape_side_menu_button"
                android:clickable="true"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/item_side_menu_icon"
                    android:layout_height="@dimen/item_side_menu_icon"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_history" />

                <TextView
                    android:id="@+id/txt_side_menu_history"
                    style="@style/StyleTextInSideMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="@string/title_history" />

                <ImageView
                    android:id="@+id/img_arrow_history"
                    android:layout_width="@dimen/item_side_menu_arrow"
                    android:layout_height="@dimen/item_side_menu_arrow"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_arrow_forward" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_side_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_side_menu_height"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/shape_side_menu_button"
                android:clickable="true"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/item_side_menu_icon"
                    android:layout_height="@dimen/item_side_menu_icon"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_setting" />

                <TextView
                    android:id="@+id/txt_side_menu_setting"
                    style="@style/StyleTextInSideMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="@string/text_setting" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/item_side_menu_icon"
                        android:layout_height="@dimen/item_side_menu_icon"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_map" />

                    <TextView
                        style="@style/StyleTextInSideMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="@string/text_search_target" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/grp_target"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp" >

                    <RadioButton
                        android:id="@+id/rb_curr_pos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_current_pos"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/rb_phu_quoc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_phu_quoc"
                        android:textColor="@color/white" />
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/SideBlackLine" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_app_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/text_app_version"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/White" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/text_copyright"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/White" />
        </LinearLayout>
    </LinearLayout>
    
    <ImageView 
        android:layout_gravity="right"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/shadow_line"/>

</FrameLayout>