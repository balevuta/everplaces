<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Light">

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/ActionBar</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- <item name="android:windowContentOverlay">@null</item> -->
    </style>
    
    <style name="ActionBar" parent="android:Widget.ActionBar">
        <item name="android:background">@color/holo_blue_light</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleText</item>
    </style>

    <style name="AppThemeOverlay" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- <item name="android:homeAsUpIndicator">@drawable/listicon_bugger</item>
       	<item name="android:windowContentOverlay">@null</item> -->
       	<item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <!-- <item name="android:windowBackground">@drawable/dialog_bg</item> -->
        <item name="android:background">@drawable/dialog_bg</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">@color/holo_blue_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Animations" />

    <style name="Animations.Window">
        <item name="@android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="@android:windowExitAnimation">@anim/zoom_out</item>
    </style>

    <style name="StyleTextInButton">
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="StyleTextInDialog">
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="StyleTextInTitle">
        <item name="android:textColor">@color/holo_blue_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleTextInDetail">
        <item name="android:textColor">@color/DarkGreen</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="StyleTextInDetailInfo">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="StyleTextPlaceDetailButton">
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:textSize">10sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="StyleTextInHomeTile">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>
    
    <style name="StyleTextInAbout">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/TextColor</item>
    </style>
    
    <style name="StyleTextInSideMenu">
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:textSize">25sp</item>
        <!-- <item name="android:textAppearance">?android:attr/textAppearanceMedium</item> -->
    </style>
    
    <style name="StyleSmallTextInSideMenu">
        <item name="android:textColor">@color/TextColorBlur</item>
        <item name="android:textSize">20sp</item>
        <!-- <item name="android:textAppearance">?android:attr/textAppearanceMedium</item> -->
    </style>

</resources>